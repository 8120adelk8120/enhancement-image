    "    #%%\n",
    "import cv2 as cv\n",
    "import numpy as np\n",
    "\n",
    "class FilteringImage:\n",
    "    def __init__(self, image_path: str):\n",
    "        self.image_path = image_path\n",
    "\n",
    "    def GrayScale(self):\n",
    "        gray_image = cv.imread(self.image_path, 0)\n",
    "        return gray_image\n",
    "\n",
    "    def Brightness(self, alpha=0, beta=1):\n",
    "        image = cv.imread(self.image_path)\n",
    "        image = cv.normalize(image, None, alpha, beta, cv.NORM_MINMAX, dtype=cv.CV_32F)\n",
    "        return image\n",
    "\n",
    "    def sharp(self):\n",
    "        image = cv.imread(self.image_path)\n",
    "        kernel = np.array([[0, -1, 0], [-1, 5, -1], [0, -1, 0]])\n",
    "        sharpened_image = cv.filter2D(image, -1, kernel)\n",
    "        return sharpened_image\n",
    "\n",
    "    def Pencil(self, sigma_s=40, sigma_r=0.06):\n",
    "        image = cv.imread(self.image_path)\n",
    "        pencil, _ = cv.pencilSketch(image, sigma_s, sigma_r, shade_factor=0.05)\n",
    "        return pencil\n",
    "\n",
    "    def Sketch(self, sigma_s=40, sigma_r=0.06):\n",
    "        image = cv.imread(self.image_path)\n",
    "        sketch, _ = cv.pencilSketch(image, sigma_s, sigma_r, shade_factor=0.05)\n",
    "        return sketch\n",
    "\n",
    "    def detile_enhance(self, sigma_s=10, sigma_r=0.15):\n",
    "        image = cv.imread(self.image_path)\n",
    "        enhanced, _ = cv.pencilSketch(image, sigma_s=sigma_s, sigma_r=sigma_r)\n",
    "        return enhanced\n",
    "\n",
    "    def clahe(self, clip_limit=2.0, tileGridSize=(8, 8)):\n",
    "        image = cv.imread(self.image_path)\n",
    "        if image is None:\n",
    "            raise ValueError(\"Image not found or path is incorrect.\")\n",
    "        channels = cv.split(image)\n",
    "        clahe = cv.createCLAHE(clipLimit=clip_limit, tileGridSize=tileGridSize)\n",
    "        clahe_channels = [clahe.apply(channel) for channel in channels]\n",
    "        final_image = cv.merge(clahe_channels)\n",
    "        return final_image\n",
    "\n",
    "    def blur(self, ksize=(5, 5)):\n",
    "        image = cv.imread(self.image_path)\n",
    "        blurred_image = cv.GaussianBlur(image, ksize, 0)\n",
    "        return blurred_image\n",
    "\n",
    "    def thermal_effect(self):\n",
    "        image = cv.imread(self.image_path)\n",
    "        thermal_image = cv.applyColorMap(image, cv.COLORMAP_JET)\n",
    "        return thermal_image\n",
    "\n",
    "# Example of usage:\n",
    "if __name__ == \"__main__\":\n",
    "    image_path = \"image5.jpg\"  # Replace with your image path\n",
    "    filter_image = FilteringImage(image_path)\n",
    "\n",
    "    gray_image = filter_image.GrayScale()\n",
    "    cv.imshow(\"Gray Image\", gray_image)\n",
    "\n",
    "    sharpened_image = filter_image.sharp()\n",
    "    cv.imshow(\"Sharpened Image\", sharpened_image)\n",
    "\n",
    "    blurred_image = filter_image.blur()\n",
    "    cv.imshow(\"Blurred Image\", blurred_image)\n",
    "\n",
    "    thermal_image = filter_image.thermal_effect()\n",
    "    cv.imshow(\"Thermal Image\", thermal_image)\n",
    "\n",
    "    clahe_image = filter_image.clahe()\n",
    "    cv.imshow('Clahe Image',clahe_image)\n",
    "\n",
    "    brightness_image = filter_image.Brightness()\n",
    "    cv.imshow('Brightness Image',brightness_image)\n",
    "\n",
    "    pencil_image = filter_image.Pencil()\n",
    "    cv.imshow('Pencil Image',pencil_image)\n",
    "\n",
    "    detile_enhanced_image = filter_image.detile_enhance()\n",
    "    cv.imshow('Detiled_Enhanced Image',detile_enhanced_image)\n",
    "\n",
    "    sketch_image = filter_image.Sketch()\n",
    "    cv. imshow('Sketch Image',sketch_image)\n",
    "\n",
    "\n",
    "cv.waitKey(0)\n",
    "cv.destroyAllWindows()\n"
   ]
  }
